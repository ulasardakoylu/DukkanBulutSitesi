@model List<DükkanBulutSitesi.Models.Manager.PendingCommentVm>

@{
    ViewData["Title"] = "Yorum Yönetimi";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h2 class="mb-0">Yorum Yönetimi</h2>
        <div class="text-muted">Onay bekleyen yorum açıklamalarını buradan yönetebilirsiniz.</div>
    </div>

    <span class="badge bg-primary fs-6">
        Bekleyen: @(Model?.Count ?? 0)
    </span>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info mb-0">
        Şu anda onay bekleyen yorum bulunmuyor.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header d-flex align-items-center justify-content-between">
            <span class="fw-semibold">Bekleyen Yorumlar</span>
            <small class="text-muted">Toplam: @Model.Count</small>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Ürün</th>
                        <th>Bekleyen Metin</th>
                        <th class="text-nowrap">Tarih</th>
                        <th class="text-end" style="width:260px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td class="text-nowrap">
                                <div class="fw-semibold">@c.ItemName</div>
                            </td>

                            <td class="align-top" style="white-space:pre-wrap;">
                                @((c.PendingText ?? "").TrimStart())
                            </td>

                            <td class="text-nowrap">
                                @c.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </td>

                            <td class="text-end">
                                <div class="d-inline-flex gap-2">
                                    <form asp-action="ApprovePendingComment" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="commentId" value="@c.CommentID" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="bi bi-check2-circle me-1"></i> Onayla
                                        </button>
                                    </form>

                                    <form asp-action="RejectPendingComment" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="commentId" value="@c.CommentID" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-x-circle me-1"></i> Reddet
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-muted small mt-2">
        Not: “Reddet” işlemi bekleyen metni siler ve yorumu “Reddedildi” durumuna alır.
    </div>
}

@section Scripts{
    <script>
        (function () {

            const handledTypes = new Set([
                'text',
                'password',
                'number',
                'email',
                'search',
                'tel',
                'url'
            ]);

            document.addEventListener('keydown', function (e) {
                if (e.key !== 'Enter') return;

                const el = e.target;

                // Only INPUTs inside a form
                if (!el || el.tagName !== 'INPUT') return;
                if (!el.form) return;

                if (el.readOnly || el.disabled) return;

                if (el.type === 'file') return;

                const type = (el.type || '').toLowerCase();
                if (!handledTypes.has(type)) return;

                if (e.shiftKey) {
                    e.preventDefault();
                    return;
                }

                e.preventDefault();
                el.form.submit();
            });

        })();
    </script>
}
