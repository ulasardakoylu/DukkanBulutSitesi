@model DükkanBulutSitesi.Models.Owner.OwnerCommentManagementVm
@{
    ViewData["Title"] = "Yorum Yönetimi";
    Layout = "_StoreLayout";
}

<div class="d-flex align-items-center justify-content-between mb-3">
     <div class="d-flex gap-2 align-items-center">
        <button class="btn btn-outline-secondary"
                data-bs-toggle="modal"
                data-bs-target="#commentLogModal">
            <i class="bi bi-clock-history me-1"></i> İşlem Geçmişi
        </button>

        <span class="badge bg-primary fs-6">Bekleyen: @Model.Pending.Count</span>
    </div>
</div>

@if (!Model.Pending.Any())
{
    <div class="alert alert-info mb-0">Şu anda onay bekleyen yorum bulunmuyor.</div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header d-flex align-items-center justify-content-between">
            <span class="fw-semibold">Bekleyen Yorumlar</span>
            <small class="text-muted">Toplam: @Model.Pending.Count</small>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Ürün</th>
                        <th>Bekleyen Metin</th>
                        <th class="text-nowrap">Oluşturulma</th>
                        <th class="text-end" style="width:240px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Pending)
                    {
                        <tr>
                            <td class="text-nowrap">
                                <div class="fw-semibold">@c.ItemName</div>
                            </td>

                            <td style="white-space:pre-wrap;">@c.PendingText</td>

                            <td class="text-nowrap">
                                @c.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                            </td>

                            <td class="text-end">
                                <div class="d-inline-flex gap-2">
                                    <form asp-action="ApproveCommentAsOwner" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="commentId" value="@c.CommentID" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="bi bi-check2-circle me-1"></i> Onayla
                                        </button>
                                    </form>

                                    <form asp-action="RejectCommentAsOwner" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="commentId" value="@c.CommentID" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-x-circle me-1"></i> Reddet
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-muted small mt-2">
        Not: “Reddet” işlemi bekleyen metni siler ve yorumu “Reddedildi” durumuna alır.
    </div>
}

<div class="modal fade" id="commentLogModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yorum Moderasyon Geçmişi (@Model.StoreName)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <div class="modal-body">
                @if (!Model.Logs.Any())
                {
                    <div class="text-muted">Bu dükkanda henüz işlem yok.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-nowrap">Tarih</th>
                                    <th>Yönetici</th>
                                    <th class="text-nowrap">İşlem</th>
                                    <th>Detay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var l in Model.Logs)
                                {
                                    <tr>
                                        <td class="text-nowrap">@l.PerformedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@l.ManagerName</td>
                                        <td class="text-nowrap">
                                            @if (l.Action == "CommentApproved")
                                            {
                                                <span class="badge bg-success">Onay</span>
                                            }
                                            else if (l.Action == "CommentRejected")
                                            {
                                                <span class="badge bg-danger">Red</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@l.Action</span>
                                            }
                                        </td>
                                        <td style="white-space:pre-wrap;">@l.Notes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        (function () {

            const handledTypes = new Set([
                'text',
                'password',
                'number',
                'email',
                'search',
                'tel',
                'url'
            ]);

            document.addEventListener('keydown', function (e) {
                if (e.key !== 'Enter') return;

                const el = e.target;

                // Only INPUTs inside a form
                if (!el || el.tagName !== 'INPUT') return;
                if (!el.form) return;

                if (el.readOnly || el.disabled) return;

                if (el.type === 'file') return;

                const type = (el.type || '').toLowerCase();
                if (!handledTypes.has(type)) return;

                if (e.shiftKey) {
                    e.preventDefault();
                    return;
                }

                e.preventDefault();
                el.form.submit();
            });

        })();
    </script>

    <script>
        (function () {
          const form = document.querySelector('form[asp-action="SavePersonnel"]') || document.querySelector('form');
          const hire = document.getElementById('hireDateInput');
          const exit = document.getElementById('exitDateInput');
          if (!form || !hire || !exit) return;

          form.addEventListener('submit', function () {
            if (exit.value) hire.value = "";
            else if (hire.value) exit.value = "";
          });
        })();
    </script>

}